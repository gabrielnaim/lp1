#include <stdio.h>
#include <string.h>

/* 11) Escrever um programa em C que leia uma cadeia de caracteres
e imprima todas as palavras que contenham trÃªs ou mais vogais. */


int main(){
	char cadeia[100];
	char aux[30];

	printf("Escreva a cadeia: ");
	scanf("%[^\n]", cadeia);

	printf("Palavras com 3 ou mais vogais: ");

	int i = 0; int j = 0; int k = 0; int vogais = 0;
	while (cadeia[i] != '\0'){
		if(cadeia[i] == ' '){
			if(vogais >= 3){
				printf("%s, ", aux);	
			}
			for(k = 0; k < 30; k++){
				aux[k] = '\0';
			}
			vogais = 0;
			i += 1;
			j = 0;
			
		} else {
			if (cadeia[i] == 'a' || cadeia[i] == 'e' || cadeia[i] == 'i' || cadeia[i] == 'o' || cadeia[i] == 'u'){
				vogais += 1;
			}
			aux[j] = cadeia[i];

			i += 1;
			j += 1;
		}
	
	}
	
	return 0;
}
