#include <stdio.h>

/* 1) Escreva um programa em C que encontre o menor inteiro positivo n que atenda as seguintes condições:
n / 3 = x inteiro e resto 2
n / 5 = y inteiro e resto 3
n / 7 = z inteiro e resto 4 */

int main(){
	int n = 1; int q = 0;
	while (q == 0){
		if (n % 3 == 2 && n % 5 == 3 && n % 7 == 4) {
			q = 1;
		} else {
			n = n + 1;
			continue;
		}
	} printf("%d", n);
	
	return 0;
}
