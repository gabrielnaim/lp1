#include <stdio.h>

int main(void) {

  int tamanhoNumero(char numero[]);
  void printNumero(char numero[])
  void mudaNumero(char numero[]);

  char numero[5];

  printf("Digite um numero de até 4 casas decimais: ");
  scanf("%s", numero);
  while(tamanhoNumero(numero) > 4){
    printf("Digite um numero de até 4 casas decimais: ");
    scanf("%s", numero);
  }


  
}

int tamanhoNumero(char numero[]){
  int i = 0; int n = 0;
  while (numero[i] != '\0'){
    i += 1; n += 1;
  }

  return n;

}

void printNumero(char numero[]){
  if(numero[0] == '0'){
    printf("");
  } else if (numero[0] == '1'){
    printf("Mil ");
  } else if (numero[0] == '2'){
    printf("Dois mil ");
  } else if (numero[0] == '3'){
    printf("Tres mil ");
  } else if (numero[0] == '4'){
    printf("Quatro mil ");
  } else if (numero[0] == '5'){
    printf("Cinco mil ");
  } else if (numero[0] == '6'){
    printf("Seis mil ");
  } else if (numero[0] == '7'){
    printf("Sete mil ");
  } else if (numero[0] == '8'){
    printf("Oito mil ");
  } else if (numero[0] == '9'){
    printf("Nove mil ");
  }
  if(numero[1] == '0' && numero[2] == '0' && numero[3] == '0'){
    printf("");
  } else if (numero[1] == '0'|| numero[2] == '0'){
    printf("e ");
  } else {
    printf(", ");
  }
  if(numero[1] == '1' && numero[2] == '0' && numero[3] == '0'){
    printf("")
  }
}

int contaZero(char numero[]){
  int i = 0; int n = 0;
  while (numero[i] != '\0'){
    if(numero[i] == 0){
      n = n+1;
      i = i+1;
    } else {
      i = i+1;
    }
  }

  return n;

}

void mudaNumero(char numero[]){
  if(tamanhoNumero(numero) == 1){
    numero[3] = numero[0];
    numero[0] = '0';
    numero[1] = '0';
    numero[2] = '0';
    numero[4] = '\0';
  } else if(tamanhoNumero(numero) == 2){
    numero[2] = numero[0];
    numero[3] = numero[1];
    numero[0] = '0';
    numero[1] = '0';
    numero[4] = '\0';
  } else if(tamanhoNumero(numero) == 3){
    char aux[3];
    aux[0] = numero[0];
    aux[1] = numero[1];
    aux[2] = numero[2];
    numero[0] = '0';
    numero[1] = aux[0];
    numero[2] = aux[1];
    numero[3] = aux[2];
    numero[4] = '\0';
  }
}
