#include <stdio.h>

int main(void) {

  int tamanhoNumero(char numero[]);
  void printNumero(char numero[]);
  void mudaNumero(char numero[]);

  char numero[5];

  printf("Digite um numero de até 4 casas decimais: ");
  scanf("%s", numero);
  while(tamanhoNumero(numero) > 4){
    printf("Digite um numero de até 4 casas decimais: ");
    scanf("%s", numero);
  }


  
}

int tamanhoNumero(char numero[]){
  int i = 0; int n = 0;
  while (numero[i] != '\0'){
    i += 1; n += 1;
  }

  return n;

}

void printNumero(char numero[]){
  if(numero[0] == '0'){
    printf("");
  } else if (numero[0] == '1'){
    printf("Mil");
  } else if (numero[0] == '2'){
    printf("Dois mil");
  } else if (numero[0] == '3'){
    printf("Tres mil");
  } else if (numero[0] == '4'){
    printf("Quatro mil");
  } else if (numero[0] == '5'){
    printf("Cinco mil");
  } else if (numero[0] == '6'){
    printf("Seis mil");
  } else if (numero[0] == '7'){
    printf("Sete mil");
  } else if (numero[0] == '8'){
    printf("Oito mil");
  } else if (numero[0] == '9'){
    printf("Nove mil");
  }
  if(numero[1] == '0' && numero[2] == '0' && numero[3] == '0'){
    printf("");
  } else if (numero[1] == '0'|| numero[2] == '0'){
    printf(" e ");
  } else {
    printf(", ");
  }
  if (numero[1] == '0'){
    printf("");
  } else if(numero[1] == '1' && numero[2] == '0' && numero[3] == '0'){
    printf("Cem");
  } else if(numero[1] == '1'){
    printf("Cento");
  } else if(numero[1] == '2'){
    printf("Duzentos");
  } else if(numero[1] == '3'){
    printf("Trezentos");
  } else if(numero[1] == '4'){
    printf("Quatrocentos");
  } else if(numero[1] == '5'){
    printf("Quinhentos");
  } else if(numero[1] == '6'){
    printf("Seiscentos");
  } else if(numero[1] == '7'){
    printf("Setecentos");
  } else if(numero[1] == '8'){
    printf("Oitocentos");
  } else if(numero[1] == '9'){
    printf("Novecentos");
  }
  if(numero[2] == '0' && numero[3] == '0'){
    printf("");
  } else {
    printf(" e ");
  }
  if (numero[2] == '0'){
    printf("");
  } else if(numero[2] == '1' && numero[3] == '1'){
    printf("Onze");
  } else if(numero[2] == '1' && numero[3] == '2'){
    printf("Doze");
  } else if(numero[2] == '1' && numero[3] == '3'){
    printf("Treze");
  } else if(numero[2] == '1' && numero[3] == '4'){
    printf("Quatorze");
  } else if(numero[2] == '1' && numero[3] == '5'){
    printf("Quinze");
  } else if(numero[2] == '1' && numero[3] == '6'){
    printf("Dezesseis");
  } else if(numero[2] == '1' && numero[3] == '7'){
    printf("Dezessete");
  } else if(numero[2] == '1' && numero[3] == '8'){
    printf("Dezoito");
  } else if(numero[2] == '1' && numero[3] == '9'){
    printf("Dezenove");
  } else if(numero[2] == '2'){
    printf("Vinte");
  } else if(numero[2] == '3'){
    printf("Trinta");
  } else if(numero[2] == '4'){
    printf("Quarenta");
  } else if(numero[2] == '5'){
    printf("Cinquenta");
  } else if(numero[2] == '6'){
    printf("Sessenta");
  } else if(numero[2] == '7'){
    printf("Setenta");
  } else if(numero[2] == '8'){
    printf("Oitenta");
  } else if(numero[2] == '9'){
    printf("Noventa");
  }
  if(numero[3] == '0'){
    printf("");
  } else {
    printf(" e ");
  }
  if (numero[3] == '0'){
    printf("");
  } else if(numero[2] != '1' && numero[3] == '1'){
    printf("Um");
  } else if(numero[2] != '1' && numero[3] == '2'){
    printf("Dois");
  } else if(numero[2] != '1' && numero[3] == '3'){
    printf("Tres");
  } else if(numero[2] != '1' && numero[3] == '4'){
    printf("Quatro");
  } else if(numero[2] != '1' && numero[3] == '5'){
    printf("Cinco");
  } else if(numero[2] != '1' && numero[3] == '6'){
    printf("Seis");
  } else if(numero[2] != '1' && numero[3] == '7'){
    printf("Sete");
  } else if(numero[2] != '1' && numero[3] == '8'){
    printf("Oito");
  } else if(numero[2] != '1' && numero[3] == '9'){
    printf("Nove");
  }
}

int contaZero(char numero[]){
  int i = 0; int n = 0;
  while (numero[i] != '\0'){
    if(numero[i] == 0){
      n = n+1;
      i = i+1;
    } else {
      i = i+1;
    }
  }

  return n;

}

void mudaNumero(char numero[]){
  if(tamanhoNumero(numero) == 1){
    numero[3] = numero[0];
    numero[0] = '0';
    numero[1] = '0';
    numero[2] = '0';
    numero[4] = '\0';
  } else if(tamanhoNumero(numero) == 2){
    numero[2] = numero[0];
    numero[3] = numero[1];
    numero[0] = '0';
    numero[1] = '0';
    numero[4] = '\0';
  } else if(tamanhoNumero(numero) == 3){
    char aux[3];
    aux[0] = numero[0];
    aux[1] = numero[1];
    aux[2] = numero[2];
    numero[0] = '0';
    numero[1] = aux[0];
    numero[2] = aux[1];
    numero[3] = aux[2];
    numero[4] = '\0';
  }
}
