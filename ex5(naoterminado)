#include <stdio.h>

int main(){
	float valor; int n = 5; int q = 0;
	
	float moedas[] = {0.01, 0.05, 0.1, 0.25, 0.5, 1};

	printf("Digite um valor de R$0,01 a R$1,00: ");
	scanf("%f", &valor);

	while (valor < 0.01 || valor > 1){
		printf("Digite um valor de R$0,01 a R$1,00: ");
		scanf("%f", &valor);
	}

	int contaMoedas(float valor, float moedas[n], int q);

	contaMoedas(valor, moedas[n], q);

	return 0;

}

int contaMoedas(float valor, float moedas[n], int q){
	if (valor >= moedas[n]){
		q = valor / moedas[n];
		valor = valor % moedas[n];
		return contaMoedas(valor, moedas[n-1], q);
	} else {
		return q;
	}



}
