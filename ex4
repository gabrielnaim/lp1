#include <stdio.h>

// 4) Escreva um programa em C que calcule o fatorial de um nÃºmero inteiro positivo. 

int main(){
	
	int fat(int n);
	
	int fatorial = fat();

	printf("%d", fatorial);

	return 0;
}

int fat(int n){
	if (n == 1){
		return 1;
	} else if (n > 1){
		printf("%d\n", n);
		return n*fat(n-1);
	} else {
		return printf("digite um inteiro positivo.");
	}
}
